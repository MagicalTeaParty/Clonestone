@model IEnumerable<ClonestoneMVC.Models.tblcard>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cardname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.life)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.attack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.flavor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblability.ability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblclass.@class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbltype.typename)
        </th>
        <th></th>
    </tr>
    

    @for (int i = 0; i < 10; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).cardname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).mana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).life)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).flavor)
            </td>
            
            <td>
               @{ 
                   string img64 = Convert.ToBase64String(Model.ElementAt(i).pic);
                   string img64url = string.Format("data:image;img64,{0}", img64);
                   <img src="@img64url" />
                
                   
                   }
                
            </td>
                        
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).pic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).tblability.ability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).tblclass.@class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).tbltype.typename)
            </td>            
        </tr>
    }

